<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:orientation="vertical"
        android:background="@color/cisco_blue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="91dp"
            android:layout_height="82dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bharat"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/userPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Software Engineer"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>




    <LinearLayout
        android:id="@+id/goalattainment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/bar_icon"
            android:drawablePadding="10dp"
            android:drawableTint="@color/cisco_blue"
            android:fontFamily="@font/gabarito"
            android:text="Goal Attainment"
            android:textColor="#595959"
            android:textSize="22dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ordersearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/search_icon"
            android:drawablePadding="10dp"
            android:drawableTint="@color/cisco_blue"
            android:fontFamily="@font/gabarito"
            android:text="OrderSearch"
            android:textColor="#595959"
            android:textSize="22dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/payments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/payment_icon"
            android:drawablePadding="10dp"
            android:drawableTint="@color/cisco_blue"
            android:fontFamily="@font/gabarito"
            android:text="Payments"
            android:textColor="#595959"
            android:textSize="22dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/goal_icon"
            android:drawablePadding="10dp"
            android:drawableTint="@color/cisco_blue"
            android:fontFamily="@font/gabarito"
            android:text="Goal To Cash Summary"
            android:textColor="#595959"
            android:textSize="22dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/export"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/export_icon"
            android:drawablePadding="10dp"
            android:drawableTint="@color/cisco_blue"
            android:fontFamily="@font/gabarito"
            android:text="Export Dashboard"
            android:textColor="#595959"
            android:textSize="22dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/logoutbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="220dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/login_icon"
            android:drawablePadding="10dp"
            android:drawableTint="@color/cisco_blue"
            android:fontFamily="@font/gabarito"
            android:text="Logout"
            android:textColor="#595959"
            android:textSize="22dp" />
    </LinearLayout>

</LinearLayout>